<div class={{this.footerClass}}>
  {{#hover-reveal revealToggle=this.revealToggle}}
    <button type="button" class="footer-icon-btn float-right" {{action "showBackground"}}>
      <div class="radial-progress">
        <div class="circle">
          <div class="mask left">
            <div class="fill"></div>
          </div>
          <div class="mask right">
            <div class="fill"></div>
          </div>
        </div>
      </div>
      {{fa-icon "camera-retro" prefix="fal" size="lg"}}
    </button>
  {{/hover-reveal}}
  {{#if @photoCredit}}
    <p class="footer-description float-right hover-text-reveal">
      <span>{{{@photoCredit}}}</span>
    </p>
  {{/if}}
</div>

<div class="background-row chairs-message-background show-for-medium"></div>
<div class="hover-reveal hover-reveal-gradient-right chairs-message-background-img show-for-medium" style={{backgroundStyle}}>
  <div class="quote quote-right">
    <h3 class="hover-reveal-quote">
      {{t "chairsMessage.quote"}}
    </h3>
    <div class="hover-reveal-quote-line"></div>
  </div>
</div>
<div class="chairs-message">
  <div class="grid-container">
    <div class="grid-x grid-margin-x hover-reveal-hide">
      <div class="cell">
        <h1>{{t "chairsMessage.title"}}</h1>
      </div>
    </div>
    <div class="grid-x grid-margin-x">
      <div class="cell medium-6 hover-reveal-hide">
        <p>{{t "chairsMessage.paragraph1"}}</p>
        <p>{{t "chairsMessage.paragraph2"}}</p>
        <p>{{t "chairsMessage.paragraph3"}}</p>
      </div>
      <div class="cell medium-6 hover-reveal-hide">
        <p>{{t "chairsMessage.paragraph4"}}</p>
        <p>{{t "chairsMessage.paragraph5"}}</p>
        <div class="cigi-red-line"></div>
        <p class="chair-name">
          <b>{{t "chairsMessage.signature.name"}}</b>
          <br><em>{{t "chairsMessage.signature.title"}}</em>
        </p>
      </div>
    </div>
  </div>
</div>
<FooterPhoto @darkFooter={{true}} />
